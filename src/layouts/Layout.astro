---
interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="zh-CN" class="light overflow-x-hidden">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no" />
    <meta name="description" content="基金派 - 专业的基金估值与管理工具，实时查看基金净值估算、持仓管理、收益统计" />
    <meta name="keywords" content="基金,基金估值,基金净值,持仓管理,理财工具" />
    <meta name="theme-color" content="#3B82F6" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans:wght@400;500;600;700&display=swap" rel="stylesheet" />
    <title>{title}</title>
  </head>
  <body class="font-sans antialiased overflow-x-hidden min-h-screen bg-background text-foreground">
    <slot />
  </body>
</html>

<style is:global>
  @import '../styles/globals.css';
</style>
